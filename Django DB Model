from django.db import models


class Customer(models.Model):
    Customername = models.CharField(max_length=60)
    Cust_Username = models.CharField(max_length=60)
    Cust_Password = models.CharField(max_length=60)
    Cust_Prefix = models.CharField(max_length=60)

    def __unicode__(self):
        return "{0} {3}".format(self.Customername, self.Cust_Prefix)


class Static(models.Model):
    CustomerData = models.ForeignKey(Customer, on_delete=models.CASCADE)
    #ip_prefix = models.ForeignKey(Customer, on_delete=models.CASCADE)
    Cust_Intent = models.CharField(max_length=60)
    Source_IP = models.CharField(max_length=60)
    Destination_IP = models.CharField(max_length=60)
    path = models.CharField(max_length=60)

    def __str__(self):
        return self.path


class Dynamic(models.Model):
    Path_name = models.ForeignKey(Static, on_delete=models.CASCADE)
    Source_address = models.CharField(max_length=60)
    Node = models.CharField(max_length=60)
    Destination_address = models.CharField(max_length=60)
    Source_port = models.CharField(max_length=60)
    Destination_port = models.CharField(max_length=60)
    DPID = models.CharField(max_length=60)


